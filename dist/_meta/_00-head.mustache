<!DOCTYPE html>
<html class="{{ htmlClass }}">
    <head>
        <title>{{ title }}</title>
        <meta charset="UTF-8">
        <meta name="author" content="{{ author }}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="icon" type="image/png" href="../../images/favicon-32x32.png" sizes="32x32">
        <link rel="icon" type="image/png" href="../../images/favicon-16x16.png" sizes="16x16">
        <link rel="icon" type='image/png' href="../../images/favicon.png">
        <link rel="icon" type='image/x-icon' href="../../images/favicon.ico">

        <!-- External CSS -->
        {{! Configured in _data/meta.json }}
        {{#assets.css.external}}
            <link rel="stylesheet" href="https://{{& .}}" media="all" type="text/css">
        {{/assets.css.external}}

        <!-- Vendor CSS -->
        {{! Configured in _data/meta.json }}
        {{#assets.css.vendor}}
            <link rel="stylesheet" href="../../vendor/{{& .}}" media="all" type="text/css">
        {{/assets.css.vendor}}

        <!-- Components CSS -->
        {{! Configured in _data/meta.json }}
        {{#assets.css.components}}
            <link rel="stylesheet" href="../../components/{{& .}}" media="all" type="text/css">
        {{/assets.css.components}}

        <!-- App CSS -->
        <link rel="stylesheet" href="../../css/{{ appName }}.css?{{ cacheBuster }}" media="all" type="text/css">

        <!-- Head JS -->
        {{! Configured in _data/meta.json }}
        {{#assets.js.head}}
            <script src="https://{{& .}}"></script>
        {{/assets.js.head}}

        <!-- Begin Pattern Lab (Required for Pattern Lab to run properly) -->
        {{{ patternLabHead }}}
        <!-- End Pattern Lab -->
    </head>
    <body class="{{ bodyClass }}">
